  <!--TODO: mudar formulario mais parecido ttn -->
  <div class="card-body">
     <form action ="/addsensor" method="POST">

      <div class="mb-3">
        <label for="sensortype">Tipo:</label>
          <select name="sensortype" class="form-control" id="sensortype" > 
              <option value="Temp sensor">Temp sensor</option>
               <option value="Hum sensor">Hum sensor</option>
              <option value="Img Sensor">Img Sensor</option>
          </select>
        </div>

        <div class="mb-3">
        <label for="model">Modelo:</label>
          <select name="model" class="form-control" id="model" > 
              <option value="MKR WAN 1310">MKR WAN 1310</option>
              <option value="Camera">Camera(designar isto depois)</option>
              <option value="other">Other</option>
          </select>
        </div>

         <div class="mb-3">
        <label for="frequencyPlan">Plano de Frequência:</label>
          <select name="frequencyPlan" class="form-control" id="frequencyPlan" > 
              <option value="Europe 863-870 MHz (SF12 for RX2)">Europe 863-870 MHz (SF12 for RX2) </option>
              <option value="Europe 863-870 MHZ (SF9 for RX2)-recommended">Europe 863-870 MHz (SF9 for RX2)-recommended</option>
          </select>
        </div>

        <div class="mb-3">
        <label for="devSensor">DEV EUI:</label>
        <input type="text" class="form-control" id="devEUI" name="devEUI" required/>
        </div>

         <div class="mb-3">
        <label for="appSensor">APP EUI:</label>
        <input type="text" class="form-control" id="appEUI" name="appEUI" required/>
        </div>

         <div class="mb-3">
        <label for="keySensor">APP KEY:</label>
        <input type="text" class="form-control" id="appKey" name="appKey" required/>
        </div>


      <div class="mb-3">
        <label for="nameSensor">Name Sensor:</label>
        <input type="text" class="form-control" id="sensorname" name="sensorname" placeholder="Ex. Quintal , Jardim , Vinha" required/>
        </div>

       <!-- TODO: Adicionar longitude e latitude -->
       <div class="mb-3">
          <label for="location">Localização:</label>
          <input type="text" class="form-control" id="location" name="location" required/>
          {{!-- <div id="small_map">
            </div> --}}
        </div>
      

        <div class="mb-3">
          <label for="descSensor" class="form-label">Descrição:</label>
          <input type="text" class="form-control" id="description" name="description" placeholder="Ex. vista para jardim , vista da vinha" required>
        </div>
       
        <button type="submit" name="save_select" class="btn btn-primary">Add Sensor</button>

        <button class="btn btn-primary"> 
          <a href="sensors"> 
		        <h2>Voltar</h2>
	        </a>
         </button>
         
    </form>

