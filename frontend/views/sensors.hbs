  <h1>Lista de Sensores</h1>

    <table>
      <thead>
        <tr>
          <th>Model</th>
          <th>DEV EUI</th>
          <th>APP KEY</th>
          <th>Name Sensor</th>
          <th>Localization</th>
          <th>Description</th>
          <th></th>
        </tr>
      </thead>
  <tbody>
    {{#each sensors}}
    <tr>
        <td><a href='/sensorsread'>{{this.model}}</a></td>
        <td>{{this.devEUI}}</td>
        <td>{{this.appKey}}</td>
        <td>{{this.sensorname}}</td>
        <td>{{this.location}}</td>
        <td>{{this.description}}</td>
        <td>
          <div class="delete" onclick="deleteSensor({{this.id}})">Delete</div>
        </td>
    </tr>
    {{/each }} 
  </tbody>
</table>

  

        <button class="button login__submit">
            <span class="button_sensor">  <a href="/addsensor">Add new sensor</a></span>
         </button>	

         <button> 
          <a href="/logged"> 
		        <h2>Voltar</h2>
	        </a>
         </button>
         





</body>

<script>
const deleteSensor = (id) => {
    fetch('http://localhost:3000/addsensor', {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ id }),
    })
      .then(() => {
        location.reload()
      })

  }
</script>
